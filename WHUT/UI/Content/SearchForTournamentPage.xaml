<Page x:Class="WHUT.UI.Content.SearchForTournamentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WHUT.UI.Content"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchForTournamentPage">

    <Grid>
        <StackPanel HorizontalAlignment="left" Width="300">
            <TextBlock FontSize="20" Text="Provide the name of the tournament, that you wish to start."/>
            <TextBox Name="tournamentName" Height="30"/>
            <Button Name="LoadTournament" Content="Load Tournament" Click="LoadTournament_Click"/>
        </StackPanel>
    </Grid>
</Page>
