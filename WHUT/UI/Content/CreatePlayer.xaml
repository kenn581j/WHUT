<Page x:Class="WHUT.UI.Content.CreatePlayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WHUT.UI.Content"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePlayer">

    <Grid>
        <TextBox Name="Name" HorizontalAlignment="Left" Height="23" Margin="10,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235"/>
        <TextBox Name="Club" HorizontalAlignment="Left" Height="23" Margin="10,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235"/>
        <TextBox Name="Warand" HorizontalAlignment="Left" Height="23" Margin="10,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235"/>
        <Button Name="Save" Content="Save" HorizontalAlignment="Left" Margin="83,175,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.65,0.285" Click="Save_Click"/>
        <Label Name="LabelName" Content="Name" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <Label Name="LabelClub" Content="Club" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top"/>
        <Label Name="LabelWarband" Content="Warband" HorizontalAlignment="Left" Margin="14,103,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
