<Page x:Class="WHUT.UI.Content.BeginTournament"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WHUT.UI.Content"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BeginTournament">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Width="300">
            <TextBlock FontSize="20" Text="Provide a tournament name: "/>
            <TextBox Name="tournamentName" Height="30"/>
            <Button Name="LoadTournament" Content="Load Tournament" Click="LoadTournament_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Width="300">
            <ListBox Name="TournamentViewOnList" PreviewMouseLeftButtonUp="TournamentViewOnList_PreviewMouseLeftButtonUp"/>
        </StackPanel>
    </Grid>
</Page>
