<Page x:Class="WHUT.UI.Content.NewTournamentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WHUT.UI.Content"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewTournamentPage">

    <StackPanel HorizontalAlignment="Left" Width="300">
        <TextBlock Text="Tournament Name: "/>
        <TextBox Name="tournamentName"/>
        <TextBlock Text="Location: "/>
        <TextBox Name="location"/>
        <TextBlock Text="Date: "/>
        <DatePicker Name="date" FirstDayOfWeek="Monday" IsDropDownOpen="False"/>
        <Button Name="startTournament" Content="Start Tournament" 
                Click="StartTournament_Click"
                Margin="150, 20, 10, 0"/>
    </StackPanel>
</Page>
